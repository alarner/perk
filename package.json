{
  "name": "@larner.dev/perk",
  "description": "A well documented set of tools for building node web applications.",
  "version": "2.14.1",
  "author": "Aaron Larner",
  "scripts": {
    "build": "tsup-node src/index.ts --format cjs,esm --dts --clean",
    "dev": "nodemon -x \"tsc --build tsconfig.json\" -w src -e ts,js,json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest",
    "version": "npm run format && git add -A src"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "dependencies": {
    "@koa/cors": "4.0.0",
    "@larner.dev/perk-response-codes": "1.0.0",
    "@types/node": "18.11.5",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "mime": "3.0.0",
    "path-to-regexp": "6.2.1",
    "ts-jest": "29.0.3"
  },
  "devDependencies": {
    "@types/jest": "29.2.0",
    "@types/koa__cors": "3.3.0",
    "@types/koa-bodyparser": "4.3.0",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.2.2",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "tsup": "6.3.0",
    "typescript": "4.8.4"
  },
  "homepage": "https://github.com/larner-dev/perk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larner-dev/perk.git"
  },
  "bugs": {
    "url": "https://github.com/larner-dev/perk/issues"
  },
  "license": "MIT"
}
