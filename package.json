{
  "name": "perk",
  "description": "A well documented set of tools for building node web applications.",
  "version": "2.9.7",
  "author": "Aaron Larner",
  "scripts": {
    "build": "rimraf build && tsc",
    "dev": "nodemon -x \"tsc --build tsconfig.json\" -w src -e ts,js,json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest",
    "version": "npm run format && git add -A src"
  },
  "types": "build/index.d.ts",
  "main": "build/index.js",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@types/node": "^14.11.8",
    "knex": "^0.21.6",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "mime-types": "^2.1.26",
    "path-to-regexp": "^6.1.0",
    "pg": "^8.4.1",
    "ts-jest": "^26.4.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.26.0",
    "@types/jest": "^26.0.14",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__cors": "^3.0.2",
    "@types/mime-types": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.5.3",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "homepage": "https://github.com/alarner/perk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alarner/perk.git"
  },
  "bugs": {
    "url": "https://github.com/alarner/perk/issues"
  },
  "license": "MIT"
}
