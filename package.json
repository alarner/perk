{
  "name": "perk",
  "description": "A well documented set of tools for building node web applications.",
  "version": "2.10.0",
  "author": "Aaron Larner",
  "scripts": {
    "build": "rimraf build && tsc",
    "dev": "nodemon -x \"tsc --build tsconfig.json\" -w src -e ts,js,json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest",
    "version": "npm run format && git add -A src"
  },
  "types": "build/index.d.ts",
  "main": "build/index.js",
  "dependencies": {
    "@koa/cors": "4.0.0",
    "@types/node": "18.11.5",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "mime-types": "^2.1.26",
    "path-to-regexp": "^6.1.0",
    "ts-jest": "29.0.3"
  },
  "devDependencies": {
    "@types/jest": "29.2.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__cors": "^3.0.2",
    "@types/mime-types": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.2.2",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "homepage": "https://github.com/alarner/perk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alarner/perk.git"
  },
  "bugs": {
    "url": "https://github.com/alarner/perk/issues"
  },
  "license": "MIT"
}
