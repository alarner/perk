{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build/esm",
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "./src/**/*.test.ts"]
}
