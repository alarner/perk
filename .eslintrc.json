{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint", "prettier", "jest"],
	"ignorePatterns": ["build"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"rules": {
		"no-console": 1,
		"prettier/prettier": 2,
		"@typescript-eslint/class-name-casing": 0,
		"@typescript-eslint/camelcase": 0
	},
	"env": {
		"browser": true,
		"node": true,
		"jest/globals": true,
		"es6": true
	}
}
